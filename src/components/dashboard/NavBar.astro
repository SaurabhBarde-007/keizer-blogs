---
import { Users, Grid, Book, LibraryBig, Settings, LogOut } from 'lucide-react';

const { navItems } = Astro.props;
---

<nav class="bg-white text-gray-800 h-screen fixed w-64 border-r border-gray-200 shadow-sm">
  <div class="flex items-center justify-center py-6 border-b border-gray-200">
    <LibraryBig className="h-8 w-8 text-blue-600" />
    <span class="ml-3 text-2xl font-semibold text-gray-900">BlogDash</span>
  </div>
  <ul class="flex flex-col mt-6 space-y-1 px-4">
    {navItems.map((item: any) => (
      <li>
        <a href={item.href} class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-blue-600 rounded-md transition-colors duration-150">
          <item.icon className="h-5 w-5" />
          <span class="ml-3 font-medium">{item.label}</span>
        </a>
      </li>
    ))}
  </ul>
  <div class="absolute bottom-8 left-0 w-full px-4 space-y-2">
    <a href="/settings" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-blue-600 rounded-md transition-colors duration-150">
      <Settings className="h-5 w-5" />
      <span class="ml-3 font-medium">Settings</span>
    </a>
    <a href="/logout" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-red-600 rounded-md transition-colors duration-150">
      <LogOut className="h-5 w-5" />
      <span class="ml-3 font-medium">Logout</span>
    </a>
  </div>
</nav>