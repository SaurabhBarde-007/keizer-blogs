---
import "styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <div vaul-drawer-wrapper="">
      <div
        class="container relative grid min-h-dvh flex-col items-center justify-center lg:max-w-none lg:grid-cols-2 lg:px-0"
      >
        <div
          class="relative hidden h-full flex-col bg-muted p-10 text-white dark:border-r lg:flex"
        >
          <div class="absolute inset-0 bg-zinc-900"></div>

          <div class="relative z-20 flex items-center text-lg font-medium">
            {/* logo */}
          </div>

          <div class="relative z-20 mt-auto">
            <blockquote class="space-y-2">
              <p class="text-lg">
                &ldquo;Invoicen has saved me countless hours of work and helped
                me deliver Invoices to my clients faster than ever
                before.&rdquo;
              </p>
              <footer class="text-sm">Anon</footer>
            </blockquote>
          </div>
        </div>

        <div class="lg:p-8"><slot /></div>
      </div>
    </div>
  </body>
</html>
